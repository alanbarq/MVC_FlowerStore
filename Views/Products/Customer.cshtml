
@{
    ViewBag.Title = "Customer";
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="~/Content/Site.css" type="text/css" />
</head>
<body>
    <div style="background-color:#BDB0AD;border-radius:25px;padding:20px;margin:30px;font-family:inherit">
        <center><h2>Welcome Back to Spencer Flower Shop: @ViewBag.Message</h2></center>
    </div>
    <hr size="10" width="90%" color="red">
    <div class="grid-container">
        
        <div class="grid-item">
            <div class="card" style="width: 18rem;">
                <a href="~/Products/ShowProducts?category=flowers" ><img class="card-img-top" src="~/Content/images/flowers.jfif" alt="Flower image cap"></a>
                <div class="card-body">
                    <h5 class="card-title">Flowers</h5>
                    <p class="card-text">To go to the flower section, enter here</p>
                    <a href="~/Products/ShowProducts?category=flowers" class="btn btn-primary">Go to flower section</a>
                </div>
            </div>
        </div>
        <div class="grid-item">
            <div class="card" style="width: 18rem;">
                <a href="~/Products/ShowProducts?category=gifts"><img class="card-img-top" src="~/Content/images/gifts.jfif" alt="Gift image cap"></a>
                <div class="card-body">
                    <h5 class="card-title">Gifts</h5>
                    <p class="card-text">To go to the gifts section, enter here</p>
                    <a href="~/Products/ShowProducts?category=gifts" class="btn btn-primary">Go to gifts section</a>
                </div>
            </div>
        </div>
        <div class="grid-item">
            <div class="card" style="width: 18rem;">
                <a href="~/Products/ShowProducts?category=christmas"><img class="card-img-top" src="~/Content/images/christmas.jfif" alt="Christmas image cap"></a>
                <div class="card-body">
                    <h5 class="card-title">Christmas</h5>
                    <p class="card-text">To go to the christmas section, enter here</p>
                    <a href="~/Products/ShowProducts?category=christmas" class="btn btn-primary">Go to christmas section</a>
                </div>
            </div>
        </div>
    </div>
    

</body>

